<div id="user-bar-greeting">
  <% if @current_user %>
    Logged in as <%= @current_user.name %>. <%= link_to 'Log Out', logout_path %>
  <% else %>
    <%= link_to 'Log In', login_path, :class => 'user-bar-action' unless session[:user_id].present? %>
      to access our listings.<br>
      Autoregister via <%= link_to 'UC Berkeley CalNet', login_path, :class => 'user-bar-action' unless session[:user_id].present? %>
  <% end %>
</div>
