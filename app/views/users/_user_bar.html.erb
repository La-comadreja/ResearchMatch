<div id="user-bar-greeting">
  <% if user_signed_in? %>
    Logged in as <%= current_user.name %>. <%= link_to 'Log Out', destroy_user_session_path, :method => :delete %>
  <% else %>
    <%= link_to 'Log In', new_user_session_path %> or <%= link_to 'Register', new_user_registration_path %>
        to access our listings.
  <% end %>
</div>
